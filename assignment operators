public class assignmentoperators {
    public static void main(String[] args){
        int a=1;
        int b=2;
        a+=1;
        System.out.println(a);
        a+=b;
        System.out.println(a);
        a<<=b;
        System.out.println(a);
        a&=b;
        System.out.println(a);
    }
}
